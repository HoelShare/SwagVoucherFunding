<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagVoucherFunding\Service\VoucherFundingService">
            <argument id="Shopware\Storefront\Page\Product\ProductLoader" type="service"/>
        </service>

        <service id="SwagVoucherFunding\Controller\VoucherFundingController" public="true">
            <argument id="SwagVoucherFunding\Service\VoucherFundingService" type="service"/>
        </service>

        <service id="SwagVoucherFunding\Subscriber\ProductSubscriber">
            <argument id="SwagVoucherFunding\Service\VoucherFundingService" type="service" />
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
